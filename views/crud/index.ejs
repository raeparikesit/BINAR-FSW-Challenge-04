<%- include("../partials/head") %>

    <body>
        <h1>Tabel Car Management</h1>
        <table>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Size</th>
            <th>Picture</th>
            <th>Action</th>
            <% cars.map((productcars)=> { %>
                <tr>
                    <td><%= productcars.id %></td>
                    <td><%= productcars.name %></td>
                    <td><%= productcars.price %></td>
                    <td><%= productcars.size %></td>
                    <td><%= productcars.imgUrl %></td>
                    <td>
                        <a href="/cars/edit/<%= productcars.id %>">
                            <button>Edit</button>
                        </a>
                        <a href="/cars/delete/<%= productcars.id %>">
                            <button>Delete</button>
                        </a>
                    </td>
                </tr>
                <% }) %>
        </table>

        <a href="/cars/create">
            <button>+ Add New Car</button>
        </a>
    </body>

    </html>